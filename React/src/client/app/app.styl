// Remember to use rems and ems. http://css-tricks.com/rems-ems.
@import '../../../node_modules/nib/index.styl'

global-reset()
reset-html5()

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

// Goodness.
*, ::after, ::before
  box-sizing border-box

html,
body
  min-height 100%

body
  overflow-y scroll
  color #333
  font-family 'Segoe UI', 'Lucida Grande', 'Ubuntu', 'sans-serif'
  font-size 16px
  line-height 1.5

#app
  margin 0

  header
    padding 1em 2em 0

    .container
      max-width 1200px

  article
    clear both
    max-width 1000px
    padding 0 2em
    margin 0 auto
    display block
    text-align center

  footer
    padding 0 2em 1em

  :focus
    outline-style none

  a
    color #fff
    text-decoration none

    &:hover:not(.active)
      text-decoration underline

    &.active
      font-weight bold

    &[disabled]
      opacity .5

    &:hover
      text-shadow 1px 1px #999

    &:active
      text-shadow 1px 1px #999

    &.small
      margin 0 .1em 0 0
      padding 0 .1em
      line-height 1
      font-size .8em
      font-weight normal

  button,
  input,
  textarea
    &[disabled]
      opacity .5

  p,
  li
    max-width 42em

  h1
    font-size 1.5em
    margin 0 0 .5em
  h2
    font-size 1.4em
    margin 0 0 .3em
  h3
    font-size 1.3em
  h4
    font-size 1.2em
  h5
    font-size 1em


@media (max-width 600px)
  #app
    header.main
      height 110px !important
      overflow hidden !important

      h1
        display none !important

      nav ul li a
        span
          max-height 60px !important
          max-width 60px !important

        div
          font-size .8em !important

      h5
        display none !important
