// Remember to use rems and ems. http://css-tricks.com/rems-ems.

@import '../../../node_modules/normalize.css/normalize.css'
@import '../../../node_modules/nib/index.styl'

global-reset()
reset-html5()

// http://phonegap-tips.com/articles/essential-phonegap-css-webkit-tap-highlight-color.html
*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)

// Goodness.
*, ::after, ::before
  box-sizing border-box

html,
body
  min-height 100%

body
  overflow-y scroll
  color #333
  font-family 'Segoe UI', 'Lucida Grande', 'Ubuntu', 'sans-serif'
  font-size 16px
  line-height 1.5

#app
  margin 0

  article
    clear both

  :focus
    outline-style none

  a
    color #fff
    text-decoration none

    &:hover:not(.active)
      text-decoration underline

    &.active
      font-weight bold

  button
    background-color #6496c8
    border 0
    border-radius 1em
    color #fff
    font-weight bold
    line-height 1.8
    margin 0 .5em 0 0
    padding 0 1em
    text-shadow -1px 1px #417cb8

    &[disabled]
      opacity .5

    &:hover
      background-color #346392
      text-shadow -1px 1px #27496d

    &:active
      background-color #27496d
      text-shadow -1px 1px #193047

    &.small
      margin 0 .1em 0 0
      padding 0 .1em
      line-height 1
      font-size .8em
      font-weight normal

  button,
  input,
  textarea
    &[disabled]
      opacity .5

    &:-webkit-autofill
      -webkit-box-shadow 0 0 0 500px #ECEFF1 inset

  p,
  li
    max-width 42em

  h1
    font-size 1.5em
    margin 0 0 .5em
  h2
    font-size 1.4em
    margin 0 0 .3em
  h3
    font-size 1.3em
  h4
    font-size 1.2em
  h5
    font-size 1em
